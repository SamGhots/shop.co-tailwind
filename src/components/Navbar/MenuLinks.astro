const AccordionHeaders = document.querySelectorAll(".accordion-header");
// [‡πÄ‡∏Å‡πá‡∏ö‡∏ä‡∏∏‡∏î‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏• Content ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î] - ‡πÉ‡∏ä‡πâ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏ß‡∏ô‡∏•‡∏π‡∏õ‡∏õ‡∏¥‡∏î‡∏ï‡∏±‡∏ß‡∏≠‡∏∑‡πà‡∏ô
const allAccordionContent = document.querySelectorAll(".accordion-content");

// ----------------------------------------------------
// 2. ‡∏Å‡∏≤‡∏£‡∏ï‡∏¥‡∏î‡∏ï‡∏±‡πâ‡∏á Listener: ‡∏ß‡∏ô‡∏•‡∏π‡∏õ‡∏ú‡πà‡∏≤‡∏ô‡πÅ‡∏ï‡πà‡∏•‡∏∞ Header ‡πÄ‡∏û‡∏µ‡∏¢‡∏á‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡πÄ‡∏î‡∏µ‡∏¢‡∏ß
// ----------------------------------------------------
AccordionHeaders.forEach((header) => {
    // [‡πÄ‡∏Å‡πá‡∏ö‡πÑ‡∏≠‡∏Ñ‡∏≠‡∏ô‡∏õ‡∏±‡∏à‡∏à‡∏∏‡∏ö‡∏±‡∏ô] - ‡∏´‡∏≤ Element ‡πÑ‡∏≠‡∏Ñ‡∏≠‡∏ô‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡∏†‡∏≤‡∏¢‡πÉ‡∏ô Header ‡∏ï‡∏±‡∏ß‡∏ô‡∏µ‡πâ (Header A)
    // ‡πÉ‡∏ä‡πâ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏´‡∏°‡∏∏‡∏ô‡πÑ‡∏≠‡∏Ñ‡∏≠‡∏ô‡∏ï‡∏±‡∏ß‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏Ñ‡∏•‡∏¥‡∏Å‡πÄ‡∏ó‡πà‡∏≤‡∏ô‡∏±‡πâ‡∏ô
    const toggleIcon = header.querySelector(".nav-toggle-icon");
    
    // ‡πÄ‡∏û‡∏¥‡πà‡∏° Event Listener ‡πÉ‡∏´‡πâ‡∏Å‡∏±‡∏ö‡πÅ‡∏ï‡πà‡∏•‡∏∞ Header ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏£‡∏≠‡∏£‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡∏Ñ‡∏•‡∏¥‡∏Å
    header.addEventListener("click", (event) => {
        
        // ----------------------------------------------------
        // 3. ‡πÄ‡∏á‡∏∑‡πà‡∏≠‡∏ô‡πÑ‡∏Ç‡∏Å‡∏≤‡∏£‡∏ó‡∏≥‡∏á‡∏≤‡∏ô (Mobile Only)
        // ----------------------------------------------------
        // ‡∏ñ‡πâ‡∏≤‡∏Ç‡∏ô‡∏≤‡∏î‡∏´‡∏ô‡πâ‡∏≤‡∏à‡∏≠ <= 1024px ‡πÄ‡∏ó‡πà‡∏≤‡∏ô‡∏±‡πâ‡∏ô ‡∏à‡∏∂‡∏á‡∏à‡∏∞‡∏ó‡∏≥‡∏á‡∏≤‡∏ô
        if (window.innerWidth <= 1024) { 
            // ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡πÑ‡∏°‡πà‡πÉ‡∏´‡πâ‡∏•‡∏¥‡∏á‡∏Å‡πå (<a>) ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏´‡∏ô‡πâ‡∏≤‡∏´‡∏£‡∏∑‡∏≠‡πÄ‡∏•‡∏∑‡πà‡∏≠‡∏ô‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á
            event.preventDefault();
            
            // ----------------------------------------------------
            // 4. ‡∏Å‡∏≤‡∏£‡∏£‡∏∞‡∏ö‡∏∏‡∏ï‡∏±‡∏ß‡∏ï‡∏ô‡∏Ç‡∏≠‡∏á‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏õ‡∏±‡∏à‡∏à‡∏∏‡∏ö‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏Ñ‡∏•‡∏¥‡∏Å
            // ----------------------------------------------------
            const accordionItem = header.parentElement; // ‡∏´‡∏≤ Element ‡πÅ‡∏°‡πà (<li>) ‡∏Ç‡∏≠‡∏á Header ‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏Ñ‡∏•‡∏¥‡∏Å
            if (!accordionItem) return; // Safety Check: ‡∏ñ‡πâ‡∏≤‡∏´‡∏≤‡πÅ‡∏°‡πà‡πÑ‡∏°‡πà‡πÄ‡∏à‡∏≠ ‡πÉ‡∏´‡πâ‡∏´‡∏¢‡∏∏‡∏î‡∏ó‡∏≥‡∏á‡∏≤‡∏ô
            
            // ‡∏´‡∏≤ Content ‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡∏†‡∏≤‡∏¢‡πÉ‡∏ô Item ‡πÅ‡∏°‡πà‡πÄ‡∏î‡∏µ‡∏¢‡∏ß‡∏Å‡∏±‡∏ô (Content A)
            const accordionContent = accordionItem.querySelector(".accordion-content");
            // Safety Check ‡πÅ‡∏•‡∏∞ Type Check: ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡∏´‡∏≤‡πÄ‡∏à‡∏≠‡πÅ‡∏•‡∏∞‡πÄ‡∏õ‡πá‡∏ô Element HTML
            if (!(accordionContent instanceof HTMLElement)) return; 

            // ----------------------------------------------------
            // 5. ‡∏´‡∏•‡∏±‡∏Å‡∏Å‡∏≤‡∏£ "‡∏õ‡∏¥‡∏î‡∏Å‡πà‡∏≠‡∏ô‡πÄ‡∏õ‡∏¥‡∏î": ‡∏ß‡∏ô‡∏•‡∏π‡∏õ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏õ‡∏¥‡∏î Content ‡∏≠‡∏∑‡πà‡∏ô‡πÜ
            // ----------------------------------------------------
            allAccordionContent.forEach((content) => {
                // ‡∏´‡∏≤ Header ‡πÅ‡∏•‡∏∞ Icon ‡∏Ç‡∏≠‡∏á Content ‡∏ï‡∏±‡∏ß‡∏ó‡∏µ‡πà‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏ß‡∏ô‡∏•‡∏π‡∏õ‡∏≠‡∏¢‡∏π‡πà (Content B, C, D)
                const parentHeader = content.parentElement?.querySelector(".accordion-header");
                const otherIcon = parentHeader?.querySelector(".nav-toggle-icon");
                
                // ‡∏ñ‡πâ‡∏≤ Content ‡∏ó‡∏µ‡πà‡∏ß‡∏ô‡∏•‡∏π‡∏õ‡∏≠‡∏¢‡∏π‡πà '‡πÑ‡∏°‡πà‡πÉ‡∏ä‡πà' Content ‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏Ñ‡∏•‡∏¥‡∏Å‡πÉ‡∏ô‡∏ï‡∏≠‡∏ô‡∏ô‡∏µ‡πâ (content !== accordionContent)
                if(content !== accordionContent){
                    // ‡∏™‡∏±‡πà‡∏á‡∏õ‡∏¥‡∏î‡∏ï‡∏±‡∏ß‡∏≠‡∏∑‡πà‡∏ô: ‡∏•‡∏ö‡∏Ñ‡∏•‡∏≤‡∏™ active ‡πÅ‡∏•‡∏∞‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤ maxHeight ‡πÄ‡∏õ‡πá‡∏ô 0
                    content.classList.remove('active');
                    (content as HTMLElement).style.maxHeight = "0";
                    
                    // ‡πÄ‡∏≠‡∏≤‡∏Ñ‡∏•‡∏≤‡∏™‡∏´‡∏°‡∏∏‡∏ô‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡πÑ‡∏≠‡∏Ñ‡∏≠‡∏ô‡∏Ç‡∏≠‡∏á content ‡∏≠‡∏∑‡πà‡∏ô‡πÜ
                    otherIcon?.classList.remove("rotate-180");
                }
            });

            // ----------------------------------------------------
            // 6. ‡∏™‡∏•‡∏±‡∏ö‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡∏ï‡∏±‡∏ß‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏Ñ‡∏•‡∏¥‡∏Å (‡πÄ‡∏õ‡∏¥‡∏î/‡∏õ‡∏¥‡∏î)
            // ----------------------------------------------------
            accordionContent.classList.toggle("active");
            toggleIcon?.classList.toggle("rotate-180"); // ‡πÉ‡∏ä‡πâ‡πÑ‡∏≠‡∏Ñ‡∏≠‡∏ô‡∏Ç‡∏≠‡∏á Header ‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏ú‡∏π‡∏Å‡πÑ‡∏ß‡πâ‡∏ï‡∏±‡πâ‡∏á‡πÅ‡∏ï‡πà‡∏ï‡πâ‡∏ô
            
            // ----------------------------------------------------
            // 7. ‡∏Å‡∏≥‡∏´‡∏ô‡∏î‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏π‡∏á‡∏ï‡∏≤‡∏°‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞ (‡πÉ‡∏ä‡πâ scrollHeight ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏ô‡∏∏‡πà‡∏°‡∏ô‡∏ß‡∏•)
            // ----------------------------------------------------
            if (accordionContent.classList.contains("active")) {
                // ‡∏ñ‡πâ‡∏≤‡∏°‡∏µ‡∏Ñ‡∏•‡∏≤‡∏™ active (‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏õ‡∏¥‡∏î): ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤ maxHeight ‡πÄ‡∏õ‡πá‡∏ô‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏π‡∏á‡∏à‡∏£‡∏¥‡∏á‡∏Ç‡∏≠‡∏á‡πÄ‡∏ô‡∏∑‡πâ‡∏≠‡∏´‡∏≤
                accordionContent.style.maxHeight = accordionContent.scrollHeight + "px";
            } else {
                // ‡∏ñ‡πâ‡∏≤‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ñ‡∏•‡∏≤‡∏™ active (‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏õ‡∏¥‡∏î): ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤ maxHeight ‡πÄ‡∏õ‡πá‡∏ô 0
                accordionContent.style.maxHeight = "0";
            }
        }
    });
});
</script>

