---
import Container from "./Container.astro";
import Button from "./Button.astro";
import HeaderImg from "../img/header/header-hero.png";
import diamondImg from "../img/shape/diamond.svg";
---

<header class="bg-[var(--my-color-secondary)]">
  <Container class="flex flex-col lg:flex-row pt-6 lg:pt-0">
    <!-- header title -->
    <div
      class="header-left flex-grow flex-shrink-1 lg:basis-[44%] xl:basis-[46%] content-center"
    >
      <div
        class="header-top flex flex-col lg:items-start lg:text-start md:max-w-140 md:mx-auto lg:mx-0 md:items-center md:text-center"
      >
        <h1
          class="mb-4 text-[var(--my-color-accent)] text-[clamp(1.8rem,3.5vw,4rem)] sm:text-[clamp(2.4rem,3.5vw,4rem)] lg:text-[clamp(1.8rem,3.2vw,4rem)] leading-[1]"
        >
          FIND CLOTHES THAT MATCHES YOUR STYLE
        </h1>
        <p class="mb-4 text-[var(--my-color-text-secondary)]">
          Browse through our diverse range of meticulously crafted garments,
          designed to bring out your individuality and cater to your sense of
          style.
        </p>
        <Button
          class="btn-neutral w-full md:w-auto py-6 md:px-15 md:py-6 lg:px-12 mt-2"
          >Shop Now</Button
        >
      </div>
      <div class="header-bottom mt-8">
        <ul
          class=" text-[var(--my-color-accent)] flex flex-wrap justify-center lg:justify-between lg:max-w-130 divide-gray-300 divide-x-1 divide-y-0 gap-y-2"
        >
          <li class="stats-item">
            <strong>200+</strong>
            <small class="text-[var(--my-color-text-secondary)]"
              >International Brands</small
            >
          </li>
          <li class="stats-item border-0 sm:border-r-1">
            <strong>2,000+</strong>
            <small
              class="whitespace-nowrap text-[var(--my-color-text-secondary)]"
              >High-Quality Products</small
            >
          </li>
          <li class="stats-item">
            <strong>30,000+</strong>
            <small class="text-[var(--my-color-text-secondary)]"
              >Happy Customers</small
            >
          </li>
        </ul>
      </div>
    </div>
    <!-- header img -->
    <div
      class="header-right flex-grow flex-shrink-1 lg:basis-[35%] xl:basis-[54%] self-end relative"
    >
      <img src={diamondImg.src} alt="small diamond" class="small-diamond" />
      <img src={diamondImg.src} alt="Big diamond" class="big-diamond" />
      <img
        src={HeaderImg.src}
        alt="A couple, man and woman, smiling while modeling stylish modern fashion apparel"
        class="w-full object-cover min-h-[400px] max-h-[800px]"
      />
    </div>
  </Container>
</header>

<style>
  @reference "tailwindcss";
  .stats-item {
    @apply flex flex-col   px-4 lg:last:pl-4   first:pl-0 xl:last:pr-0 justify-center items-center lg:items-start w-1/2 sm:w-auto;
  }
</style>
<style is:global>
  @reference "tailwindcss";
  .big-diamond {
    /* 1. CSS พื้นฐานสำหรับหน้าจอแคบที่สุด (Default: 0px ถึง 424px) */
    position: absolute;
    right: 3%;
    top: 10%;
    width: 50px;
    height: 50px;
   /* 2. Media Query สำหรับช่วง 350px  เพราะตําเเหน่ง เพชล พื้นฐานเริ่มหลุดจากตําเเหน่งที่ควรจะเป็น*/
   @media (min-width: 350px) and (max-width: 424.99px) {
      right: 12%;
      top: 10%;
     
    }

    /* 3. Media Query สำหรับช่วง 425px > 639.99px */
    @media (min-width: 425px) and (max-width: 639.99px) {
      right: 12%;
      top: 10%;

    width: clamp(50px, 12vw, 76px);
    height: clamp(50px, 12vw, 76px);
    }

    /* 3. Tailwind Utility Classes สำหรับ Breakpoint ที่สูงขึ้น (ตั้งแต่ sm: 640px) */
    @apply sm:top-[10%] sm:right-[16%] md:top-[10%] md:right-[17%] lg:top-[12%] lg:right-[10%] xl:top-[12%] xl:right-[10%] 
               sm:w-[76px] sm:h-[76px] md:w-[80px] md:h-[80px] lg:w-[60px] lg:h-[60px] xl:w-[90px] xl:h-[90px] 2xl:w-[104px] 2xl:h-[104px];
  }
  .small-diamond {
    /* 1. CSS พื้นฐานสำหรับหน้าจอแคบที่สุด (Default: 0px ถึง 424px) */
    position: absolute;
    left: 3%;
    top: 35%;
    width: 30px;
    height: 30px;
   /* 2. Media Query สำหรับช่วง 350px  เพราะตําเเหน่ง เพชล พื้นฐานเริ่มหลุดจากตําเเหน่งที่ควรจะเป็น*/
   @media (min-width: 350px) and (max-width: 424.99px) {
      left: 8%;
  top: 35%;
    }

    /* 3. Media Query สำหรับช่วง 425px > 639.99px */
    @media (min-width: 425px) and (max-width: 639.99px) {
      left: 12%;
      top: 35%;
      
    width: clamp(30px, 7vw, 44px);
    height: clamp(30px, 7vw, 44px);
    }
    @apply absolute  sm:top-[40%] sm:left-[14%] md:top-[40%] md:left-[14%] lg:top-[42%] lg:left-[6%] xl:top-[42%] xl:left-[6%] 
     sm:w-[44px] sm:h-[44px] md:w-[48px] md:h-[48px] lg:w-[40px] lg:h-[40px] xl:w-[56px] xl:h-[56px];
  }
</style>
