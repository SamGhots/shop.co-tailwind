---
import Container from "./Container.astro";
import Button from "./Button.astro";
import HeaderImg from "../img/header/header-hero.png";
import diamondImg from "../img/shape/diamond.svg";
---

<header class="bg-[var(--my-color-secondary)]">
  <Container class="flex flex-col lg:flex-row pt-8 lg:pt-0">
    <!-- header title -->
    <div
      class="header-left flex-grow flex-shrink-1 lg:basis-[44%] xl:basis-[46%] content-center"
    >
      <div
        class="header-top flex flex-col lg:items-start lg:text-start md:max-w-140 md:mx-auto lg:mx-0 md:items-center md:text-center"
      >
        <h1
          class="mb-4 text-[clamp(1.8rem,3.5vw,4rem)] sm:text-[clamp(2.4rem,3.5vw,4rem)] lg:text-[clamp(1.8rem,3.2vw,4rem)] leading-[1]"
        >
          FIND CLOTHES THAT MATCHES YOUR STYLE
        </h1>
        <p class="mb-4 text-[var(--my-color-text-secondary)]">
          Browse through our diverse range of meticulously crafted garments,
          designed to bring out your individuality and cater to your sense of
          style.
        </p>
        <Button
          class="btn-neutral w-full md:w-auto py-6 md:px-15 md:py-6 lg:px-12 mt-2"
          >Shop Now</Button
        >
      </div>
      <div class="header-bottom mt-8">
        <ul
          class="flex flex-wrap justify-center lg:justify-between lg:max-w-130 divide-gray-300 divide-x-1 divide-y-0 gap-y-2"
        >
          <li class="stats-item">
            <strong>200+</strong>
            <small class="text-[var(--my-color-text-secondary)]"
              >International Brands</small
            >
          </li>
          <li class="stats-item border-0 sm:border-r-1">
            <strong>2,000+</strong>
            <small
              class="whitespace-nowrap text-[var(--my-color-text-secondary)]"
              >High-Quality Products</small
            >
          </li>
          <li class="stats-item">
            <strong>30,000+</strong>
            <small class="text-[var(--my-color-text-secondary)]"
              >Happy Customers</small
            >
          </li>
        </ul>
      </div>
    </div>
    <!-- header img -->
    <div
      class="header-right flex-grow flex-shrink-1 lg:basis-[35%] xl:basis-[54%] self-end relative"
    >
     <img
        src={diamondImg.src}
        alt="small diamond"
        class="absolute top-40 left-1 sm:top-50 sm:left-20 md:top-60 md:left-30 lg:top-40 lg:left-10 xl:top-60 xl:left-20 2xl:top-80 w-[30px] h-[30px] sm:w-[46px] sm:h-[46px] lg:w-[40px] lg:h-[40px] xl:w-[56px] xl:h-[56px]"
      />
      <img
        src={diamondImg.src}
        alt="Big diamond"
        class="absolute top-12 right-1 sm:top-15 sm:right-25 md:top-20 md:right-40 lg:top-10 lg:right-10 xl:top-20 xl:right-20 w-[50px] h-[50px]  sm:w-[60px] sm:h-[60px] lg:w-[60px] lg:h-[60px] xl:w-[90px] xl:h-[90px] 2xl:w-[104px] 2xl:h-[104px]"
      />
      <img
        src={HeaderImg.src}
        alt="A couple, man and woman, smiling while modeling stylish modern fashion apparel"
        class="w-full object-cover min-h-[400px] max-h-[800px]"
      />
    </div>
  </Container>
</header>

<style>
  @reference "tailwindcss";

  .stats-item {
    @apply flex flex-col   px-4 lg:last:pl-4   first:pl-0 xl:last:pr-0 justify-center items-center lg:items-start w-1/2 sm:w-auto;
  }
</style>
